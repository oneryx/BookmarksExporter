{
  "name": "Bookmarks Exporter",
  "description": "Export bookmarks as flat JSON/CSV, folders as tags.",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "bookmarks", 
    "downloads"
  ],
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "action": {
    "default_title": "Bookmarks Exporter",
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  }
}
